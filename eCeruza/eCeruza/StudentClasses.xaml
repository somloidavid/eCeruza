<Window x:Class="eCeruza.StudentClasses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eCeruza"
        mc:Ignorable="d"
        Title="StudentClasses" Height="1080" Width="1920" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <Grid Margin="0, 0,0,0" Background="White">
        <Grid x:Name="grd_Vertical" Width="106" Margin="0,0,1814,0" Background="#FFA500">
            <Grid Height="60" Width="60" Margin="0,-760,0,0">
                <Border CornerRadius="10" Background="#33830C0B"/>
                <Label MouseDown="button_TimeTable_Click" x:Name="button_TimeTable" Content="" HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="60" Cursor="Hand" BorderBrush="{x:Null}">
                    <Label.Background>
                        <ImageBrush ImageSource="/timetable.png"/>
                    </Label.Background>
                </Label>
            </Grid>
            <Grid Height="60" Width="60" Margin="0,-613,0,0">
                <Border CornerRadius="10" Background="#33830C0B"/>
                <Label MouseDown="button_Logout_MouseDown" x:Name="button_Logout" Content="" HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="60" Cursor="Hand" BorderBrush="{x:Null}">
                    <Label.Background>
                        <ImageBrush ImageSource="/Source/img/logout.png"/>
                    </Label.Background>
                </Label>
            </Grid>
            <Grid Height="60" Width="60" Margin="0,-466,0,0">
                <Border CornerRadius="10" Background="#33830C0B"/>
                <Label MouseDown="button_logoutClose_MouseDown" x:Name="button_logoutClose" Content="" HorizontalAlignment="Center" Height="60" VerticalAlignment="Top" Width="60" Cursor="Hand" BorderBrush="{x:Null}">
                    <Label.Background>
                        <ImageBrush ImageSource="/close.png"/>
                    </Label.Background>
                </Label>
            </Grid>
            </Grid>
        <Grid x:Name="grd_Horizontal" Height="100" Margin="0,0,0,980" Background="#FF830C0B">
            <Label Content="eCeruza-Tanuló" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="80" Width="300" FontSize="40" VerticalContentAlignment="Center" Foreground="Orange" FontWeight="DemiBold"/>
        </Grid>
        <Grid x:Name="grd_Container" Margin="160,250,55,82" Width="1705" Height="745">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid x:Name="grd_0" Margin="0,10,10,10" MouseDown="grd_MouseDown" Height="120" Width="750">
                <Border BorderThickness="2" CornerRadius="30" Background="#830C0B" Cursor="Hand"/>
            </Grid>
            <Grid x:Name="grd_1" Grid.Column="1" Margin="10,10,0,10" MouseDown="grd_MouseDown" Height="120" Width="750">
                <Border BorderThickness="2" CornerRadius="30" Background="#830C0B" Cursor="Hand"/>
            </Grid>
            <Grid x:Name="grd_2" Grid.Row="1" Margin="0,10,10,10" MouseDown="grd_MouseDown" Height="120" Width="750">
                <Border BorderThickness="2" CornerRadius="30" Background="#830C0B" Cursor="Hand"/>
            </Grid>
            <Grid x:Name="grd_3" Grid.Column="1" Grid.Row="1" Margin="10,10,0,10" MouseDown="grd_MouseDown" Height="120" Width="750">
                <Border BorderThickness="2" CornerRadius="30" Background="#830C0B" Cursor="Hand"/>
            </Grid>
            <Grid x:Name="grd_4" Grid.Row="2" Margin="0,10,10,10" MouseDown="grd_MouseDown" Height="120" Width="750">
                <Border BorderThickness="2" CornerRadius="30" Background="#830C0B" Cursor="Hand"/>
            </Grid>
            <Grid x:Name="grd_5" Grid.Column="1" Grid.Row="2" Margin="10,10,0,10" MouseDown="grd_MouseDown" Height="120" Width="750">
                <Border BorderThickness="2" CornerRadius="30" Background="#830C0B"/>
            </Grid>
            <Grid x:Name="grd_6" Grid.Row="3" Margin="0,10,10,10" MouseDown="grd_MouseDown" Height="120" Width="750">
                <Border BorderThickness="2" CornerRadius="30" Background="#830C0B" Cursor="Hand"/>
            </Grid>
            <Grid x:Name="grd_7" Grid.Column="1" Grid.Row="3" Margin="10,10,0,10" MouseDown="grd_MouseDown" Height="120" Width="750">
                <Border BorderThickness="2" CornerRadius="30" Background="#830C0B" Cursor="Hand"/>
            </Grid>
        </Grid>
        <Label x:Name="lbl_Subject" Content="Tantárgyak" HorizontalAlignment="Left" Margin="200,133,0,0" VerticalAlignment="Top" Height="85" Width="280" FontSize="50" Foreground="#FF830C0B" FontWeight="Bold"/>
    </Grid>
</Window>
