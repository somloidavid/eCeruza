<Window x:Class="eCeruza.StudentGrades"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eCeruza"
        mc:Ignorable="d"
        Title="StudentGrades" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbl_Subject" Content="Label" HorizontalAlignment="Left" Margin="53,26,0,0" VerticalAlignment="Top" Width="166"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="53,58,293,23" Height="350" Width="450">
            <Grid x:Name="grd_Grades" Background="#FFD2D2D2" Height="350" Width="450">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>
        <Grid Margin="582,60,22,25">
            <Grid x:Name="grd_Teacher"  Background="#FFC3C3C3" Margin="11,10,11,284">
                <Label Content="Tanítja:" HorizontalAlignment="Left" Margin="4,4,0,0" VerticalAlignment="Top" Height="26" Width="70"/>
                <Label x:Name="lbl_Teacher" Content="Label" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Width="114"/>
            </Grid>
            <Grid x:Name="grd_Classrooms" Background="#FFC3C3C3" Margin="11,101,13,175">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="17*"/>
                    <ColumnDefinition Width="11*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Termek:" HorizontalAlignment="Left" Margin="4,4,0,0" VerticalAlignment="Top" Height="26" Width="70"/>
                <Label x:Name="lbl_Classrooms" Content="Label" HorizontalAlignment="Left" Margin="34,30,0,0" VerticalAlignment="Top" Width="128" Grid.ColumnSpan="2"/>
            </Grid>
            <Grid x:Name="grd_Time" Background="#FFC3C3C3" Margin="18,222,18,32">
                <Label Content="Órák:" HorizontalAlignment="Left" Margin="4,4,0,0" VerticalAlignment="Top" Height="26" Width="70"/>
                <Label x:Name="lbl_Time" Content="Label" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Width="88"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
